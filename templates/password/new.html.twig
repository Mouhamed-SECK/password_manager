
{% extends 'base.html.twig' %}

{% block title %}Hello PasswordController!{% endblock %}


{% block body %}

<style >
.setting {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 15px 0;
}

 </style>

    <div class="card mt-5">
                            <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                                <h6 class="mb-0 fw-bold ">Creer un mot de Pass</h6> 
                            </div>
                            <div class="card-body">
                                <form id="passwordForm">
                                    <div class="row g-3 ">
                                        <div class="col-md-6">
                                        
                                            <div  class='mt-3'> 
                                                <label for="title" class="form-label">Titre</label>
                                                <input name="title" type="text" class="form-control" id="title" required>
                                            </div>


                                            <div  class='mt-3'>
                                                <label for="url" class="form-label">Url d'accés</label>
                                                <input name="url"  type="text" class="form-control" id="url" required>
                                            </div>

                                            <div class="mt-3">
                                                <label for="formFileMultiple" class="form-label"> Image</label>
                                                <input class="form-control" type="file" id="formFileMultiple"  >
                                            </div class='mt-3'>

                                            <div class="mt-3">
                                                <label for="login" class="form-label">Login</label>
                                                <input name="login" type="text" class="form-control" id="login" required>
                                            </div >


                                            <div class="mt-3">
                                                <label for="email"  class="form-label">Mail de recupération</label>
                                                <input type="email" email class="form-control" id="email" required>
                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                          
                                            <div class="mt-3">
                                                <label for="password" class="form-label">Mot de Pass</label>
                                                <input name="password" type="text" placeholder="Saisir ou générer" class="form-control" id="password" required>
                                            </div>


                                                  <div class="settings">
                                                        <h6 class="mt-3"> Generer un mot de Pass </h6>
                                                        <div class="setting mt-4">
                                                            <label>Password Length</label>
                                                            <input type="number" id="length" min="4" max="20" value="20" />
                                                        </div>
                                                        <div class="setting mt-4">
                                                            <label>Include uppercase letters</label>
                                                            <input type="checkbox" id="uppercase" checked />
                                                        </div>
                                                        <div class="setting mt-4">
                                                            <label>Include lowercase letters</label>
                                                            <input type="checkbox" id="lowercase" checked />
                                                        </div>
                                                        <div class="setting mt-4">
                                                            <label>Include numbers</label>
                                                            <input type="checkbox" id="numbers" checked />
                                                        </div>
                                                        <div class="setting mt-4">
                                                            <label>Include symbols</label>
                                                            <input type="checkbox" id="symbols" checked />
                                                        </div>

                                                        <input id="privateKey" type="hidden" value="{{app.user.privateKey}}"  />
                                                    </div>

                                                    <div class="btn btn-primary mt-3" id="generate">Generate Password</div>
                                                </div>

                                        </div>
                                     
                                
                                        <div class="col-md-12">
                                            <label for="description" class="form-label">Ajouter une description</label>
                                            <textarea name="description"  class="form-control" id="description" rows="3"></textarea> 
                                        </div>
                                    </div>
                             
                                  
                                    <div type="" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#confirmPassword">Creer </div>
                                </form>
                            </div>
    </div>


     <div class="modal fade" id="confirmPassword" tabindex="-1"  aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-md modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title  fw-bold" id="expaddLabel">Mettez votre mot de pass pour valider</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
         
                <div class="modal-body">
                    <form  method="post"  id="AdminpasswordForm">
                    
                        <div class="">
                            <input id="adminData"  type="hidden" value={{app.user.managedGroup.id}}>  </input>
                            <label for='adminPassword'>Entrez votre mot de Pass</label>
                            <input class="form-control" type="password" id="adminPassword" />
                            <span  id="incorrectPassword" class="text-danger"> </span>
                        </div>
                        
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuler</button>
                            <button type="submit"  id="createPassord" class="btn btn-primary">Valider</div>
                        </div>
                </form>
        
            </div>
            </div>
        </div>

      <script src="https://unpkg.com/axios/dist/axios.min.js"></script>    

    <script src="/js/crypting.js"> </script>


    <script src="/js/generate_password.js"> </script>
    <script src="/js/create_password.js"> </script>

{% endblock %}
