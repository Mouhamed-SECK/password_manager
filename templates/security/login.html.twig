{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}



  <div class="login-form">    
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

  
  
		<div class="avatar"><i class="icofont-lock"></i></div>
    	<h4> <span class="logo-icon">
                     <i class=" icofont-safety"> </i>

                </span>
                <span class="logo-text">My-Password</span></h4>

    	<h4 class="modal-title">Login to Your Account </h4>
        <div class="form-group">
            <input type="text" value="{{ last_username }}" class="form-control" placeholder="Username" name="email" id="inputEmail" required="required">
        </div>
        <div class="form-group">
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
        </div>

         <a href="#" class="forgot-link">Forgot Password?</a>

           <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
     
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">              
    </form>			

    </div>


  
</form>
{% endblock %}
