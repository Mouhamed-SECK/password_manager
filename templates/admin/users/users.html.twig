{% extends 'base.html.twig' %}

{% block title %}Hello AdminUserController!{% endblock %}




{% block body %}

    <div class="body d-flex py-lg-3 py-md-2">
            <div class="container-xxl">
                <div class="row align-items-center">
                    <div class="border-0 mb-4">
                        <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                            <h3 class="fw-bold mb-0">Utilisateurs</h3>
                            
                        </div>
                    </div>
                </div> <!-- Row end  -->
                <div class="row clearfix g-3">
                  <div class="col-sm-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <table id="myProjectTable" class="table table-hover align-middle mb-0" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>User Id</th>
                                            <th>User</th>
                                            <th>Email</th>
                                            <th>Groupe</th>

                                            <th>Role</th>  
                                            <th>Status</th>  
                                            <th>Actions</th>  
                                        </tr>
                                    </thead>
                                    <tbody>

                                    {% for user in users %}

                                

                                        <tr>
                                            <td>
                                                {{user.id}}
                                            </td>

                                            <td>
                                               <img class="avatar rounded-circle" src="/assets/images/xs/avatar1.jpg" alt="">
                                               <span class="fw-bold ms-1">  {{user.firstName}} {{user.LastName}}</span>
                                           </td>

                                           </td>
                                           
                                           <td>
                                               {{user.email}}
                                           </td>
                                            <td>
                                                {{user.groupe.title}}
                                            </td>
    
                                            <td>
                                                {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                                    <span class="badge bg-primary">Super Admin</span>
                                                {% elseif 'ROLE_ADMIN' in user.roles %}
                                                    <span class="badge bg-info">Admin</span>
                                                {% else %}
                                                     <span class="badge bg-warning">User</span>
                                                {% endif %}
                                

                                            </td>

                                             <td>
                                                {% if user.isVerified %}
                                                    <span class="badge bg-success">Compte Activ√©</span>
                                                {% else %}
                                                     <span class="badge bg-danger">Compte Inactif</span>
                                                {% endif %}
                                

                                            </td>
    
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Basic outlined example">
                                                    <button type="button" class="btn btn-outline-secondary"  data-bs-toggle="modal" data-bs-target="#expedit"><i class="icofont-edit text-success"></i></button>
                                                    <button type="button" class="btn btn-outline-secondary deleterow"><i class="icofont-ui-delete text-danger"></i></button>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                  </div>
                </div><!-- Row End -->
            </div>
        </div>


      
{% endblock %}
